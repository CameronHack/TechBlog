<div class="flex container">
  <h3>Create new Post</h3>

  <form class="form new-post-form">
    <div class="form-group">
      <input class="form-input" type="text" id="post-title" placeholder="Title" />
    </div>
    <div class="form-group">
      <textarea class="form-input" id="post-content" placeholder="Content"></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="submit-button">Create</button>
    </div>
  </form>
</div>



<h3 class="container">Previous Posts</h3>

{{#each posts as |post| }}
  <div class="container post">

    <h2 class="post-title">
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>

    <div class="post-content">
      <p>
        {{post.content}}
      </p>
    </div>

    <p class="post-creator">Created by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
{{/each}}




<script src="./js/dashboard.js"></script>
